{% extends 'ThemeBundle:Default:layout_base.html.twig' %}
{% set title = 'Importar Personas' %}
{% block title %}
    {{ title }}
{% endblock %}
{% block javascripts %}
    <script>
        $('.datatable-custom').dataTable({
            "searching": false,
            "columnDefs": [{"targets": 0, "orderable": false}],
            "paging": false,
            "aaSorting": [[1, "asc"]],
            "lengthMenu": false,
            "oLanguage": {
                "sEmptyTable": "Sin Resultados",
                "sInfo": "",
                "sInfoEmpty": ""
            }
        });
        $(document).ready(function () {


            $('.btn-ver-ubicaciones').click(function () {
                $('#form-listado-personas').submit();
            });

            $('#select_all').change(function () {
                var checkboxes = $(this).closest('form').find(':checkbox');
                if ($(this).is(':checked')) {
                    checkboxes.prop('checked', true);
                } else {
                    checkboxes.prop('checked', false);
                }
            });
        });
    </script>
{% endblock %}
{% block body -%}
    <h4 class="page-header">{{ title }}</h4>
    <div class="row">
        <div class="col-xs-12">
            <div class="box ui-draggable ui-droppable">
                <div class="box-header">
                    <div class="box-name ui-draggable-handle">
                        <i class="fa fa-search"></i>
                        <span>Importar personas desde CSV</span>
                    </div>
                </div>
                <div class="box-content">
                    <form class="form-horizontal" role="form" action="{{ path('update_personas_csv') }}" method="post" enctype="multipart/form-data">
                        {#<div class="col-sm-offset-0 col-sm-4">
                            {{form_row(form)}}
                        </div>#}
                        <div class="form-group">
                            {{ form_label(form.fuenteDatos) }}
                            <div class="col-sm-4">
                                {{ form_widget(form.fuenteDatos) }}
                            </div>
                            {{ form_label(form.etiqueta) }}
                            <div class="col-sm-4">
                                {{ form_widget(form.etiqueta) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(form.archivo) }}
                            <div class="col-sm-4">
                                {{ form_widget(form.archivo) }}
                            </div>
                        </div>
                        {{ form_rest(form) }}

                        <div class="clearfix"></div>
                        <div class="form-group">
                            <div class="col-sm-2 col-sm-offset-10">
                                <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Procesar</button>                            
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}
