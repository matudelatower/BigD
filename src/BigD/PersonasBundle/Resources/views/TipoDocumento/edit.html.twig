{% extends 'ThemeBundle:Default:layout_base.html.twig' %}
{% set title = 'Edicion Tipo Documento' %}
{% block title %}
    {{ title }}
{% endblock %}

{% block body -%}

    <h4 class="page-header">Tipo Documento</h4>
    <div class="row">
        <div class="col-xs-12 col-sm-12">            
            <div class="box-header">
                <div class="box-name ui-draggable-handle">
                    <i class="fa fa-search"></i>
                    <span>Edicion de Tipo Documento</span>
                </div>
            </div>
            <div class="box-content">
                <form action="{{ path('tipo_documento_update', { 'id': entity.id }) }}" role="form" method="post">
                    <div class="box-body">
                        <div class="box-body">
                            <div class="form-group has-feedback">
                                {{ form_label(form.descripcion) }}
                                <div class="col-sm-4">
                                    {{ form_widget(form.descripcion) }}
                                </div>

                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-9 col-sm-offset-3">
                                <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Guardar</button>

                                <a class="btn btn-success" href="{{ path('tipo_documento') }}">
                                    Volver
                                </a>

                            </div>
                        </div>
                        {{form_rest(form)}}
                </form>


            </div>
        </div>
    </div>
</div>

{% endblock %}


